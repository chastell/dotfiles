[alias]
  added = difftool --cached
  br = branch
  ci = commit
  co = checkout
  default = !git switch $(git symbolic-ref refs/remotes/origin/HEAD | cut -d/ -f4-)
  lg = log --abbrev-commit --date=iso --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd)%Creset'
  pr = !sh -c 'git fetch origin pull/$0/head:pr-$0 && git co pr-$0'
  prune = fetch --prune
  showtool = "!f() { git difftool $1^ $1; }; f"
  st = status --branch --short
  stash-all = stash save --include-untracked
  undo = reset --soft HEAD^
  up = pull --all --rebase --autostash

[branch]
  autosetuprebase = always

[color]
  ui = auto

[core]
  editor = nvim
  excludesfile = ~/.gitignore_global
  pager = delta

[delta]
  line-numbers = true
  navigate = true
  side-by-side = true

[diff]
  algorithm = patience

[fetch]
  fsckobjects = true

[gist]
  private = true

[github]
  user = chastell

[help]
  autocorrect = 1

[interactive]
  diffFilter = delta --color-only

[merge]
  conflictstyle = diff3

[pager]
  difftool = true

[push]
  default = current
  followTags = true

[rebase]
  autosquash = true

[receive]
  fsckobjects = true

[rerere]
  enabled = 1

[status]
  showUntrackedFiles = all

[transfer]
  fsckobjects = true

[url "git@github.com:"]
  insteadOf = gh:

[user]
  email = chastell@chastell.net
  name = Piotr Szotkowski

[web]
  browser = xdg-open
