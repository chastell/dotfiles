{
  "autosave": "on_focus_change",
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_font_size": 16,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "rubocop", "!solargraph"]
    }
  },
  "lsp": {
    "rubocop": {
      "initialization_options": {
        "safeAutocorrect": false
      }
    },
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false
        }
      }
    }
  },
  "soft_wrap": "bounded",
  "ui_font_size": 16,
  "vim_mode": true
}
